{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*", "./dist/*"]
        },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "vite-svg-loader",
            "vite/client",
            "vitest/globals",
            "@vue/test-utils",
            "i18next-vue"
        ]
    },
    "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.stories.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
